  "license": "UNLICENSED",
  "devDependencies": {
    "@types/joi": "10.4",
    "@types/node": "^8.0.32",
    "prettier": "1.13.6",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "bunyan": "1.8.12",
    "joi": "10.4.2"
  }
